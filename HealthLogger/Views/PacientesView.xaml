<UserControl x:Class="HealthLogger.Views.PacientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HealthLogger.Converters"
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="900">
    <UserControl.Resources>
        <local:EstadoToVisibilityConverter x:Key="EstadoToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de búsqueda -->
        <DockPanel Margin="0 0 0 15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBox x:Name="TxtBuscar"
                 Width="Auto"
                 Height="60"
                 FontSize="18"
                 materialDesign:HintAssist.Hint="Buscar por nombre o apellido..."
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 TextChanged="TxtBuscar_TextChanged"
                 VerticalAlignment="Center" />

                <CheckBox x:Name="ChkMostrarOcultos"
                  Content="Listar Pacientes Ocultos"
                  Margin="15,0,0,0"
                  VerticalAlignment="Center"
                  IsChecked="False"
                  Checked="ChkMostrarOcultos_Checked"
                  Unchecked="ChkMostrarOcultos_Checked"/>
            </StackPanel>
        </DockPanel>


        <!-- Tabla de pacientes -->
        <DataGrid x:Name="DataPacientes"
                  Grid.Row="1"
                  FontFamily="Roboto"
                  FontSize="14"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="0 10 0 0">
        </DataGrid>

    </Grid>

</UserControl>