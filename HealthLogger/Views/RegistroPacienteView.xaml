<UserControl x:Class="HealthLogger.Views.RegistroPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthLogger.Views"
             mc:Ignorable="d" 
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             d:DesignHeight="550" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="30" Width="500" HorizontalAlignment="Center">

            <TextBlock Text="Registro de Paciente" 
                       FontSize="22" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       Margin="0 0 0 20"/>

            <!-- DATOS PERSONALES -->
            <TextBox materialDesign:HintAssist.Hint="Nombres"
                     Text="{Binding Paciente.Nombres}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />

            <TextBox materialDesign:HintAssist.Hint="Apellidos"
                     Text="{Binding Paciente.Apellidos}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />

            <TextBox materialDesign:HintAssist.Hint="Cédula / CI"
                     Text="{Binding Paciente.CI}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <DatePicker Width="240" SelectedDate="{Binding Paciente.FechaNacimiento}"
                            materialDesign:HintAssist.Hint="Fecha de Nacimiento" />
                <ComboBox Width="240" Margin="20 0 0 0"
                          materialDesign:HintAssist.Hint="Sexo"
                          ItemsSource="{Binding Sexos}"
                          SelectedItem="{Binding Paciente.Sexo}" />
            </StackPanel>

            <!-- CONTACTO -->
            <TextBox materialDesign:HintAssist.Hint="Teléfono"
                     Text="{Binding Paciente.Telefono}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />

            <TextBox materialDesign:HintAssist.Hint="Contacto de Emergencia"
                     Text="{Binding Paciente.ContactoEmergencia}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />

            <TextBox materialDesign:HintAssist.Hint="Teléfono de Emergencia"
                     Text="{Binding Paciente.TelefonoEmergencia}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" />

            <!-- HISTORIAL -->
            <TextBox materialDesign:HintAssist.Hint="Antecedentes Médicos"
                     AcceptsReturn="True" Height="60"
                     Text="{Binding Paciente.Antecedentes}" />

            <TextBox materialDesign:HintAssist.Hint="Alergias"
                     AcceptsReturn="True" Height="50"
                     Text="{Binding Paciente.Alergias}" />

            <TextBox materialDesign:HintAssist.Hint="Observaciones"
                     AcceptsReturn="True" Height="60"
                     Text="{Binding Paciente.Observaciones}" />

            <Button Content="Guardar Paciente"
                    Command="{Binding GuardarCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0 20 0 0"
                    HorizontalAlignment="Right"
                    Width="160" />

        </StackPanel>
    </ScrollViewer>
</UserControl>
