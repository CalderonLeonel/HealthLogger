<Window x:Class="HealthLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:icon="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:local="clr-namespace:HealthLogger"
        Title="Health Logger"
        Height="700" Width="1380"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Roboto"
>
    <DockPanel>
        <!-- PANEL LATERAL -->
        <StackPanel DockPanel.Dock="Left"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    Width="230"
                    VerticalAlignment="Stretch"
                    >

            <!-- ENCABEZADO -->
            <StackPanel Margin="0 20 0 40" HorizontalAlignment="Center">
                
                <icon:PackIcon Kind="HospitalBuilding"
                               Width="60" Height="60"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               HorizontalAlignment="Center" />
                <TextBlock Text="Health Logger"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           Margin="0 10 0 0"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Consultorio Neurológico"
                           FontSize="12"
                           Opacity="0.7"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            

            <!-- BOTONES DE NAVEGACIÓN -->
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalContentAlignment="Left"
                Padding="16 0"
                Margin="10 5"
                Click="BuscarPacientes_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <icon:PackIcon Kind="AccountSearchOutline"
                       Width="24" Height="24"
                       Foreground="{DynamicResource PrimaryHueMidBrush}" />
                    <TextBlock Text="Buscar Pacientes"
                   FontSize="14" Margin="15 0 0 0"
                   VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    HorizontalContentAlignment="Left"
                    Padding="16 0"
                    Margin="10 5"
                    Click="RegistrarPaciente_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <icon:PackIcon Kind="AccountPlusOutline"
                                   Width="24" Height="24"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}" />
                    <TextBlock Text="Registrar Paciente"
                               FontSize="14" Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    HorizontalContentAlignment="Left"
                    Padding="16 0"
                    Margin="10 5"
                    Click="HistorialesClinicos_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <icon:PackIcon Kind="ClipboardTextOutline"
                                   Width="24" Height="24"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}" />
                    <TextBlock Text="Historiales Clínicos"
                               FontSize="14" Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- SEPARADOR VISUAL -->
            <Separator Margin="10 20" />

            <!-- BOTÓN DE SALIDA -->
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    HorizontalContentAlignment="Left"
                    Padding="16 10"
                    Margin="10 5"
                    Click="Salir_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <icon:PackIcon Kind="LogoutVariant"
                                   Width="24" Height="24"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}" />
                    <TextBlock Text="Salir"
                               FontSize="14" Margin="15 0 0 0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- CONTENEDOR PRINCIPAL -->
        <Border Background="{DynamicResource MaterialDesignPaper}"
                Padding="20">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="{DynamicResource MaterialDesignPaper}" />
        </Border>
    </DockPanel>
</Window>
